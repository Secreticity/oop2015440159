
public class Point {

	public double x;  //필드의 유효범위(scope)은 class 전체.
	public double y;
	
	public double distance() {
		double dis;
		dis = Math.sqrt(x*x + y*y);
		return dis;
	}
	
	public Point move(Point p) {
		double a, b;  //Temporary Variables

		//C : P2 = move(p1, p);
		//Java: P2 = P1.move(p);
		
		//포인트 p  만큼 이동
		a = this.x + p.x;
		b = this.y + p.y;

		//새로운 포인트 생성
		Point pnt = new Point();
		pnt.x = a;
		pnt.y = b;
		
		//새로운 포인트 반환
		return pnt;
	}
}
